[Unit]
Description=Celeste X SQLAdmin dashboard
After=network.target

[Service]
Type=simple
User=celestex
Group=celestex
WorkingDirectory=/opt/celestex
Environment="PATH=/opt/celestex/.venv/bin"
EnvironmentFile=/etc/celestex/admin.env
ExecStart=/opt/celestex/.venv/bin/uvicorn backend.admin.main:app \
  --host 0.0.0.0 \
  --port 8000 \
  --proxy-headers
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
