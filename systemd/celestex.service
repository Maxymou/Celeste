[Unit]
Description=CELESTE X (FastAPI + static React) on port 6000
After=network.target

[Service]
Type=simple
User=celeste
Group=celeste
WorkingDirectory=/opt/celestex
Environment=PATH=/opt/celestex/.venv/bin
ExecStart=/opt/celestex/.venv/bin/uvicorn backend.main:app --host 0.0.0.0 --port 6000 --proxy-headers
Restart=always
RestartSec=5
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
